<!doctype html>
<html ng-app="page">
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <link type="text/css" rel="stylesheet" href="../../../../../services/v4/js/theme/resources.js/bootstrap.min.css">
	 <link type="text/css" rel="stylesheet" href="../../../../../services/v4/web/resources/font-awesome-4.7.0/css/font-awesome.min.css">
	 <link type="image/png" rel="shortcut icon" href="../../../../../services/v4/web/resources/images/favicon.png" />
    <script type="text/javascript" src="../../../../../services/v4/web/resources/jquery/3.4.1/jquery.min.js"></script>
    <script type="text/javascript" src="../../../../../services/v4/web/resources/bootstrap/3.3.7/bootstrap.min.js" async></script>
    <script type="text/javascript" src="../../../../../services/v4/web/resources/angular/1.4.7/angular.min.js"></script>
    <script type="text/javascript" src="../../../../../services/v4/web/resources/angular/1.4.7/angular-resource.min.js"></script>
    <script type="text/javascript" src="../../../../../services/v4/web/resources/angular/1.4.7/angular-sanitize.min.js"></script>
    <script src="../../../../../services/v4/web/ide-core/ui/message-hub.js"></script>

    <script type="text/javascript" src="./${controller}"></script>

</head>
<body class="container" ng-controller="PageController">
    <div id="form"> 
#foreach($next in $form)
#if($next.component == "header")
        <div class="form-group page-header container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><h1>${next.label}</h1></div>
        </div>
#elseif($next.component == "section")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><h3>${next.label}</h3></div>
        </div>
#elseif($next.component == "textInput")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <input type="text" ng-model="data.${next.model}" id="${next.id}" class="form-control" placeholder="${next.placeholder}"/>
            </div>
        </div>
#elseif($next.component == "textArea")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <textarea ng-model="${next.model}" id="${next.id}" class="form-control" placeholder="${next.placeholder}"></textarea>
            </div>
        </div>
#elseif($next.component == "email")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <input type="text" ng-model="data.${next.model}" id="${next.id}" class="form-control" placeholder="${next.placeholder}"/>
            </div>
        </div>
#elseif($next.component == "select")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <select ng-model="${next.model}" id="${next.id}" class="form-control" placeholder="${next.placeholder}" ng-options="option.key as option.label for option in ${next.options}"></select>
            </div>
        </div>
#elseif($next.component == "selectMultiple")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">
                <select ng-model="${next.model}" id="${next.id}" class="form-control" placeholder="${next.placeholder}" ng-options="option.key as option.label for option in ${next.options}" multiple></select>
            </div>
        </div>
#elseif($next.component == "checkbox")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">

#foreach($option in $next.options)
                <div class="checkbox">
                    <label>
                        <input type="checkbox" ng-model="${next.model}[$velocityCount]" value="${option}">
                        ${option}
                    </label>
                </div>
#end
            </div>
        </div>
#elseif($next.component == "radio")
        <div class="form-group col-sm-12">
            <label for="${next.id}" class="col-sm-4 control-label text-right">${next.label}</label>
            <div class="col-sm-8">

#foreach($option in $next.options)
                    <label>
                        <input type="radio" ng-model="${next.model}" value="${option}">
                        ${option}
                    </label>
#end
            </div>
        </div>
#elseif($next.component == "paragraph")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><p>${next.label}</p></div>
        </div>
#elseif($next.component == "code")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><code>${next.label}</code></div>
        </div>
#elseif($next.component == "pre")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8"><pre>${next.label}</pre></div>
        </div>
#elseif($next.component == "inject")
        <div class="form-group container col-sm-12">
            <div class="col-sm-4"></div>
            <div class="col-sm-8">${next.label}</div>
        </div>
#end
#end
    </div>
</body>
</html>